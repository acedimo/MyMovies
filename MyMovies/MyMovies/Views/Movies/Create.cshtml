@model MyMovies.ViewModels.MovieCreateModel

@{
    ViewBag.Title = "Create Movie";
}

<form asp-controller="Movies" asp-action="Create" method="post" onsubmit="return validateForm()">
    <div class="form-group">
        <label class="control-label" asp-for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="ImageUrl">Image Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" required />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Duration">Duration</label>
        <input type="number" asp-for="Duration" class="form-control" required />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Description">Description</label>
        <textarea type="text" asp-for="Description" class="form-control" cols="20" rows="5" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="MovieGenreId">Movie Genre</label>
        <select asp-for="MovieGenreId" class="form-control">
            @foreach (var movieGenre in Model.MovieGenres)
            {
                <option value="@movieGenre.Id">@movieGenre.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts{
    <script src="~/js/validator.js"></script>
}