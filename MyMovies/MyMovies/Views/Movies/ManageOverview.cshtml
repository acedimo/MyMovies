@model List<MyMovies.ViewModels.MovieManageOverviewModel>

@{
    ViewBag.Title = "Manage movies";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@if (ViewBag.SuccessMessage != null)
{
<div class="alert alert-success" role="alert">
    @ViewBag.SuccessMessage
</div>
}

<p>
    <a href="/Movies/Create" class="btn btn-success">Create</a>
</p>

@if (Model.Count() == 0)
{
    <p>No movies</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Title</td>
                    <td class="text-center">
                        <a href="/Movies/Update/@movie.Id" class="text-primary">Modify</a>
                        <a href="/Movies/Delete/@movie.Id" class="text-danger" onclick="return confirm ('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

}