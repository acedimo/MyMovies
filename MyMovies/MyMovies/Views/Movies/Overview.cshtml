@model MyMovies.ViewModels.MovieOverviewDataModel

@{
    ViewBag.Title = "Overview";
}

@section Styles{ 
    <style>
        .recipeDescription {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 5;
            -webkit-box-orient: vertical;
        }

        .recipeSidebarCard {
            padding: 5px;
            border: 1px solid black;
            margin: 5px;
        }
    </style>
}

<div class="row">

    <div class="col-md-9">

        <div class="row p-2">
            @foreach (var movie in Model.OverviewMovies)
            {
                <div class="card col-md-3 m-2" style="width: 18rem;">
                    <img src="@movie.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">Views: @movie.Views</p>
                        <div class="card-text recipeDescription">@movie.Description</div>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">See more...</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-3 p-1 " id="sidebar" height: 800px">
        <h2>Top 5 Movies:</h2>
        <a asp-controller="Movies" asp-action="Details" asp-route-id="">
            <div class="recipeSidebarCard">
                <div>Title</div>
                <div>Date Created:</div>
                <div>Views:</div>
            </div>
        </a>
        <h2>Most Recent Movies:</h2>
        <a asp-controller="Movies" asp-action="Details" asp-route-id="">
            <div class="recipeSidebarCard">
                <div>Title</div>
                <div>Date Created:</div>
                <div>Views:</div>
            </div>
        </a>
    </div>
</div>
    

